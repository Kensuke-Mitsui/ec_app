= render partial: "items/header"
.main
  %h2 新規会員登録
  = form_for @address do |f| 
    = render "devise/shared/error_messages", resource: resource
    .main__form
      .main__form__registration
        送付先登録ページ
      .main__form__field
        = f.label :post_code, "郵便番号", class:"main__form__field__label"
        = f.text_field :post_code, placeholder: "ハイフンなしで記入してください", class: "main__form__field__box"
      .main__form__field
        = f.label :prefecture, "都道府県", class:"main__form__field__label"
        = f.select :prefecture, Address.prefectures.keys, {prompt: "--未選択--"}, {class: 'main__form__field__box'}
        
      .main__form__field
        = f.label :city, "市区町村", class:"main__form__field__label"
        = f.text_field :city, placeholder: "世田谷区", class: "main__form__field__box"   
      .main__form__field
        = f.label :block, "番地", class:"main__form__field__label"
        = f.text_field :block, placeholder: "代沢1-1-1", class: "main__form__field__box"   
      .main__form__field
        = f.label :building, "建物名、部屋番号", class:"main__form__field__label"
        .main__form__field__any
          任意
        = f.text_field :building, placeholder: "マンションTaro101号室", class: "main__form__field__box"   
      .main__form__field
        = f.label :phone_number, "電話番号", class:"main__form__field__label"
        .main__form__field__any
          任意
        = f.text_field :phone_number, placeholder: "ハイフンなしでご記入ください", class: "main__form__field__box"   
      .main__form__field
        = f.label :destination_family_name, "送付先氏名(漢字）", class:"main__form__field__label"
        .main__form__field__any
          任意
        = f.text_field :destination_family_name, placeholder: "例）田中", class: "main__form__field__box2"
        = f.text_field :destination_first_name, placeholder: "例）太郎", class: "main__form__field__box2"
      .main__form__field
        = f.label :destination_family_name_kana, "送付先氏名(カナ）", class:"main__form__field__label"
        .main__form__field__any
          任意
        = f.text_field :destination_family_name_kana, placeholder: "例）タナカ", class: "main__form__field__box2"
        = f.text_field :destination_first_name_kana, placeholder: "例）タロウ", class: "main__form__field__box2"
      .main__form__field
        = f.submit "次に進む", class:"main__form__field__submit-btn"