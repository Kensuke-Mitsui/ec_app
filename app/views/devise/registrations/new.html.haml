= render partial: "items/header"
.main
  %h2 新規会員登録
  = form_for(@user, url: user_registration_path) do |f| 
    .main__form
      .main__form__registration
        会員情報登録ページ
      = render 'layouts/error_messages', resource: @user
      .main__form__field
        = f.label :email, class:"main__form__field__label"
        = f.email_field :email,  autocomplete: "email",  placeholder: "email", class: "main__form__field__box"
      .main__form__field
        = f.label :password, "パスワード", class:"main__form__field__label"
        = f.text_field :password, placeholder: "7文字以上の半角英数字", class: "main__form__field__box", autocomplete: "off"
      .main__form__field
        = f.label :password, "パスワード確認用", class:"main__form__field__label"
        = f.text_field :password_confirmation, placeholder: "同じパスワードを入力してください", class: "main__form__field__box", autocomplete: "off"
      .main__form__field
        = f.label :family_name, "氏名(漢字）", class:"main__form__field__label"
        = f.text_field :family_name, placeholder: "例）田中", class: "main__form__field__box2", autocomplete: "off"
        = f.text_field :first_name, placeholder: "例）太郎", class: "main__form__field__box2", autocomplete: "off"
      .main__form__field
        = f.label :family_name_kana, "氏名(カナ）", class:"main__form__field__label"
        = f.text_field :family_name_kana, placeholder: "例）タナカ", class: "main__form__field__box2", autocomplete: "off"
        = f.text_field :first_name_kana, placeholder: "例）タロウ", class: "main__form__field__box2", autocomplete: "off"
      .main__form__field
        = f.label :gender, "性別", class:"main__form__field__label"
        = f.radio_button :gender, "男", class:"main__form__field__check-box1"
        = f.label(:gender, "男", class:"main__form__field__text1")
        = f.radio_button :gender, "女", class:"main__form__field__check-box2"
        = f.label(:gender, "女",  class:"main__form__field__text2")
      .main__form__field
        = f.label :birthday, "生年月日", class:"main__form__field__label"
        =raw sprintf(f.date_select(:birthday, with_css_classes:'XXXXX', prompt:"ーー",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'   
      .main__form__field
        = f.submit "次に進む", class:"main__form__field__submit-btn", url: "address_path"