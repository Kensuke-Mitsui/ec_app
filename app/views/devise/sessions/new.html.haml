= render partial: "products/header"
.main
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .main__form
      .main__form__registration
        認証情報入力ページ
      = render 'layouts/error_messages', resource: resource
      .main__form__field
        = f.label :email, "登録アドレス", class:"main__form__field__label"
        = f.email_field :email,  autocomplete: "email",  placeholder: "メールアドレス", class: "main__form__field__box"
      .main__form__field
        = f.label :password, "パスワード", class:"main__form__field__label"
        = f.text_field :password, placeholder: "7文字以上の半角英数字", class: "main__form__field__box", autocomplete: "off"
      .main__form__field
        = f.submit "ログイン", class:"main__form__field__submit-btn"
  
