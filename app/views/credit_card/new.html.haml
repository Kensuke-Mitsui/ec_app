= render partial: "items/header"
-# = form_for(@card, url: pay_credit_card_index_path) do |f| 
.main
  %h2 新規会員登録
  = form_tag(pay_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
    .main__form
      .main__form__registration
        クレジットカード登録ページ
      .main__form__field
        %label.main__form__field__label カード番号
        = text_field_tag "number", "", class: "main__form__field__box", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"
        =image_tag "material/credit/credit.png", class:"main__form__field__credit-image"
        -# = f.label :card_number, "カード番号", class:"main__form__field__label"
        -# = f.text_field :card_number, placeholder: "7文字以上の半角英数字", class: "main__form__field__box", autocomplete: "off"
      .main__form__field2
        %label.main__form__field__label 有効期限
        %select.credit-box{name: "exp_month", type: "text"} 
          %option{value:"01"} 1
          %option{value:"02"} 2
          %option{value:"03"} 3
          %option{value:"04"} 4
          %option{value:"05"} 5
          %option{value:"06"} 6
          %option{value:"07"} 7
          %option{value:"08"} 8
          %option{value:"09"} 9
          %option{value:"10"} 10
          %option{value:"11"} 11
          %option{value:"12"} 12
        %span.month 月
        %select.credit-box{name: "exp_year", type: "text"} 
          %option{value: "2020"}2020
          %option{value: "2021"}2021
          %option{value: "2022"}2022
          %option{value: "2023"}2023
          %option{value: "2024"}2024
          %option{value: "2025"}2025
          %option{value: "2026"}2026
          %option{value: "2027"}2027
          %option{value: "2028"}2028
          %option{value: "2029"}2029
          %option{value: "2030"}2030
        %span.year 年
      .main__form__field
        %label.main__form__field__label セキュリティーコード
        = text_field_tag "number", "", class: "main__form__field__box", placeholder: "カード背面4桁桁もしくは3桁の番号", maxlength: "16", type: "text", id: "card_number"
      .main__form__field
        = submit_tag "登録する", id: "token_submit", class: "main__form__field__submit-btn"